<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "gaga town", root_path, id: "logo" %>

    <nav>
      <ul class="nav navbar-nav navbar-left">
      <% if logged_in? %>
        <li class="search_window">
          <%= form_tag search_path, method: :get do %>
            <%= text_field_tag :name, params[:name], size: 30, placeholder: "何かお探しですか？", class:'form-control' %></li>
            <li class="search_window"><%= submit_tag :🔍, class:'btn btn-primary' %>
          <% end %>
        </li>
      <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "ホーム", root_path %></li>
        <% if logged_in? %>
          <li><%= link_to "カート", cart_path(@current_cart) %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "ユーザー情報変更", edit_user_path(current_user) %></li>
              <li><%= link_to "お気に入りリスト", likes_user_path(current_user) %></li>
              <li><%= link_to "購入履歴", purchases_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
