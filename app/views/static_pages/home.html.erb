<% provide(:title, "Home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="product_form">
        <%= render 'shared/search_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3 class="koga">検索結果</h3>
      <%= render 'shared/product_index' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>GAGA TOWN</h1>

    <h2>
      This is the home page for the
      <a href="https://railstutorial.jp/">engineering training</a>
      sample application.
    </h2>

    <%= link_to "ユーザー登録はこちら！", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails logo"),
              'http://rubyonrails.org/' %>
<% end %>
