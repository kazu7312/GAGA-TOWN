<% provide(:title, "Update a product") %>

<h1>商品情報変更</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.label :name  %>
        <%= f.text_field :name, placeholder: "Name", class: 'form-control' %>

        <% if false %>
        <%= f.label :picture  %>
        <%= f.file_field :picture, class: 'form-control' %>
        <% end %>

        <%= f.label :カテゴリ名  %>
        <%= f.collection_select :category_id, Category.all, :id, :name, class: 'form-control' %>
        <%= f.label :ブランド名 %>
        <%= f.collection_select :brand_id, Brand.all, :id, :name, class: 'form-control' %>
        <%= f.label :価格 %>
        <%= f.number_field :price, placeholder: "半角数字で入力してください", class: 'form-control' %>
        <%= f.label :商品詳細 %>
        <%= f.text_area :detail, class: 'form-control' %>
      </div>
      <%= f.submit "商品情報を更新する", class: "btn btn-primary" %>
    <% end %>

