    <% if false %>
    <%= form_for(@stock) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.label :ストック数 %>
        <%= f.number_field :stock, placeholder: "半角数字で入力してください", class: 'form-control' %>
        <%= hidden_field_tag :product_id, @product.id %>
        <%= f.label :size_idra %>
        <%= f.select :size_id, [["", ""], ["S", 1], ["M", 2], ["L", 3], ["XL", 4], ["XXL", 5]], class: 'form-control' %>
      </div>
      <%= f.submit "Update product stocks", class: "btn btn-primary" %>
    <% end %>
    <% end %>
  </div>
</div>
